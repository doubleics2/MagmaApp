<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="magmaapp.example.xavi.magmaapp.PagamentActivity"
    android:background="#ffffff">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:inputType="textAutoComplete"
        android:ems="10"
        android:id="@+id/nom_cognoms"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="NOM I COGNOMS"
        android:layout_weight="1" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/nom_cognoms"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/nom_cognoms"
        android:hint="EMAIL"
        android:layout_weight="1" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/numTarjeta"
        android:layout_below="@+id/email"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Nº TARGETA"
        android:layout_weight="1" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/cvc"
        android:layout_below="@+id/numTarjeta"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/any"
        android:hint="CVC"
        android:layout_weight="1" />

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dip"
    android:orientation="horizontal"
    android:layout_weight="1">

        <EditText
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/mes"
            android:layout_below="@+id/cvc"
            android:layout_alignStart="@+id/cvc"
            android:hint="MM"
            android:layout_alignEnd="@+id/any"
            android:layout_weight="0.39" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="25dp"
            android:text="/"
            android:textColor="#ff858585" />

        <EditText
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/any"
            android:layout_alignTop="@+id/mes"
            android:layout_alignParentEnd="true"
            android:hint="AA"
            android:layout_toEndOf="@+id/nomcog_fix"
            android:layout_weight="0.40" />

    </LinearLayout>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:inputType="textAutoComplete"
        android:ems="10"
        android:id="@+id/direccio"
        android:layout_below="@+id/mes"
        android:layout_alignParentStart="true"
        android:hint="DIRECCIÓ"
        android:layout_alignParentEnd="true"
        android:layout_weight="1" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/cp"
        android:layout_below="@+id/direccio"
        android:layout_alignParentStart="true"
        android:hint="CODI POSTAL"
        android:layout_alignParentEnd="true"
        android:layout_weight="1" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:inputType="textAutoComplete"
        android:ems="10"
        android:id="@+id/poblacio"
        android:layout_below="@+id/cp"
        android:layout_alignParentStart="true"
        android:hint="POBLACIÓ"
        android:layout_alignParentEnd="true"
        android:layout_weight="1" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:id="@+id/paga"
        android:textColor="#ffffffff"
        android:background="#ff000000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_weight="1"
        android:layout_marginTop="20dp" />

</LinearLayout>